{
  "manifest_version": 3,
  "name": "Easy Share Drive",
  "version": "1.0.0",
  "description": "Easy Share Drive",
  "icons": {
    "64": "icon.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "identity", "identity.email"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
